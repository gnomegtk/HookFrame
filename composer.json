{
  "name": "yourorg/hookframe",
  "description": "A simple PHP webhook framework",
  "require": {
    "php": ">=7.4",
    "vlucas/phpdotenv": "^5.5",
    "php-amqplib/php-amqplib": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Classes\\": "classes/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "php -r \"file_exists('.env') || copy('.env.example','.env');\""
    ]
  }
}
